@using day2.ViewModel
@model inst_Mobel

 <h1> update Instractor </h1>
<form  method="post" enctype="multipart/form-data" action="/Co/Save_updae/@Model.id"  class="p-3 form-group ">
    <div>
    <label for="name"> Name </label>
    <input  type="text" id="name" name="name"  value=@Model.name  class="form-control" />

    </div>
    <div>
     <label for="Adress"> Adress </label>
    <input  type="text" id="Adress" name="Adress" value=@Model.adress  class="form-control" />
    </div>
   
    <div>
     <label for="salary"> salary </label>
    <input  type="number" id="salary" name="salary" value=@Model.salary  class="form-control" />
    </div>

    <div>
       
            <img src="/imgs/@Model.img_Name" style=" border-radius: 50% " class="w-25 p-3 h-25">
        

    
    <label  for="img"> Image </label>
    <input   type="file" id="img" name="img" class ="form-control"  value=@Model.img />
    </div>
    <div>
        <label > Select Courses</label>
    <select name="Course_Id" class="form-control">
        @foreach(var item in @Model.inst_cors){
            <option value= "@item.Id"> @item.Name</option>

        }

    </select>
    </div>
    <div>
        <label > Select Department</label>
    <select name="Dept_Id" class="form-control">
        @foreach(var item in @Model.ins_dept){
            <option value= "@item.Id"> @item.Name</option>

        }

    </select>

   </div>
   <input  type="submit" value="Submit" class="alert-primary form-control my-3"  />


</form>